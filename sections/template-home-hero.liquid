<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>
{{ 'application.css' | asset_url | stylesheet_tag }}
{{ 'home-hero.css' | asset_url | stylesheet_tag }}

<div class="home-slider">
  <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper swiper-show">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide swiper-home">
          <img src="{{ block.settings.home_hero_slide_image | image_url: width: 1920 }}" alt="">
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="container home-hero-cont">
    <div class="hero-content">
      <div class="hero-title">
        <h1>{{ section.settings.home-headline }}</h1>
        <span class="txt-400">{{ section.settings.home-copy }}</span>
      </div>
      <a href="#">
        <button class="btn-primary">SHOP SEG-BÂ®</button>
      </a>
    </div>
    <div class="thumbnail-wrapper">
      <div thumbsSlider="" class="swiper swiper-thumbs">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide swiper-home">
              <img src="{{ block.settings.home_hero_slide_image | image_url: width: 1920 }}" alt="">
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="pagination-wrapper">
        <span class="uppercase">Showcase</span>
        <div class="swiper-pagination"></div>
      </div>
    </div>
    <div class="scroll-indicator">
      <span>Scroll</span>
      <svg width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
