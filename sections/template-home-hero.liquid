    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script src="{{ 'home-hero.js' | asset_url }}" defer></script>


{% schema %}
{
  "name": "Home Hero",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "home-headline",
      "label": "Headline",
      "default": "Feel Better, Move Freely<br>Spine Health Made Easy"  
    },
    {
      "type": "text",
      "id": "home-copy",
      "label": "Body Copy",
      "default": "In as little as 10 mins a day. Take control of your back health with precision and ease."  
    }
  ],
  "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
        {
          "type": "image_picker",
          "id": "home_hero_slide_image",
          "label": "Slider Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Hero Section"
    }
  ]
}
{% endschema %}
