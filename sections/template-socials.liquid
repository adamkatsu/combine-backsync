<div class="section socials">
  <div class="container socials-cont">
    <div class="socials-head">
      <span class="txt-eyebrow">{{ section.settings.section_title }}</span>
      <h2 class="txt-center">{{ section.settings.section_heading }}</h2>
      <a href="products/{{ section.settings.product_link }}">
        <button class="btn-primary btn-dark">{{ section.settings.btn_text }}</button>
      </a>
    </div>
    <div class="socials-main">
      <div class="socials-marquee">
        <div class="socials-marquee-top">
          <div class="socials-marquee-item">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'slide_top' %}
                  <img src="{{ block.settings.slide_image_top | image_url: width: 600 }}" alt="" class="socials-marquee-image">
              {% endcase %}
            {% endfor %}
          </div>
          <div class="socials-marquee-item">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'slide_top' %}
                  <img src="{{ block.settings.slide_image_top | image_url: width: 600 }}" alt="" class="socials-marquee-image">
              {% endcase %}
            {% endfor %}
          </div>
          <div class="socials-marquee-item">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'slide_top' %}
                  <img src="{{ block.settings.slide_image_top | image_url: width: 600 }}" alt="" class="socials-marquee-image">
              {% endcase %}
            {% endfor %}
          </div>
          <div class="socials-marquee-item">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'slide_top' %}
                  <img src="{{ block.settings.slide_image_top | image_url: width: 600 }}" alt="" class="socials-marquee-image">
              {% endcase %}
            {% endfor %}
          </div>
        </div>
        <div class="socials-marquee-bottom">
          <div class="socials-marquee-item">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'slide_bottom' %}
                  <img src="{{ block.settings.slide_image_bottom | image_url: width: 600 }}" alt="" class="socials-marquee-image">
              {% endcase %}
            {% endfor %}
          </div>
          <div class="socials-marquee-item">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'slide_bottom' %}
                  <img src="{{ block.settings.slide_image_bottom | image_url: width: 600 }}" alt="" class="socials-marquee-image">
              {% endcase %}
            {% endfor %}
          </div>
          <div class="socials-marquee-item">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'slide_bottom' %}
                  <img src="{{ block.settings.slide_image_bottom | image_url: width: 600 }}" alt="" class="socials-marquee-image">
              {% endcase %}
            {% endfor %}
          </div>
          <div class="socials-marquee-item">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'slide_bottom' %}
                  <img src="{{ block.settings.slide_image_bottom | image_url: width: 600 }}" alt="" class="socials-marquee-image">
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Socials Section",
  "settings": [
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "SHOP SEG-BÂ®"  
    },
    {
      "type": "product",
      "id": "product_link",
      "label": "Product Link",
      "info": "Select a Product to Link To"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Social"  
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Trusted by Experts, Loved by Users"  
    }
  ],
  "blocks": [
     {
       "name": "Slide Top",
       "type": "slide_top",
       "settings": [
        {
          "type": "image_picker",
          "id": "slide_image_top",
          "label": "Slider Image Top"
        }
      ]
    },
    {
       "name": "Slide Bottom",
       "type": "slide_bottom",
       "settings": [
        {
          "type": "image_picker",
          "id": "slide_image_bottom",
          "label": "Slider Image Bottom"
        }
      ]
    }
  ]
}
{% endschema %}