<div class="section section-block">
  <div class="container section-block-cont">
    <div class="section-block-wrapper">
      {% if section.settings.video_file_link %}
        {% assign video_url = section.settings.video_file_link  | default: 'https://cdn.shopify.com/videos/c/o/v/ae0007e47fd24f3ab6138ec550f1f1bd.mp4' %}
        <video src={{ video_url }} class="section-block-bg" controls></video>
        <div class="section-block-content">
          <span class="section-block-title">{{ section.settings.block_title }}</span>
          <span class="txt-400">{{ section.settings.block_description }}</span>
        </div>
        <img src="{{ section.settings.vid_thumbnail | image_url: width: 1920 }}" alt="" class="vid-overlay" id="block-vid-play">
        <div class="vid-overlay-gradient"></div>
        <div class="btn-vid-play">
          <svg width="18" height="22" viewBox="0 0 18 22" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0.166016 3.71733C0.166016 0.988457 3.20735 -0.639213 5.47791 0.874495L16.4018 8.15706C18.4303 9.50945 18.4303 12.4903 16.4018 13.8427L5.47791 21.1253C3.20734 22.639 0.166016 21.0113 0.166016 18.2825V3.71733Z" fill="#05060D"/>
          </svg>
        </div>
      {% else %}
        <div class="section-block-content">
          <span class="section-block-title">{{ section.settings.block_title }}</span>
          <span class="txt-400">{{ section.settings.block_description }}</span>
        </div>
        <img src="{{ section.settings.vid_thumbnail | image_url: width: 1920 }}" alt="" class="vid-overlay" id="block-vid-play">
        <div class="vid-overlay-gradient"></div>
      {% endif %}
    </div>
  </div>
</div>

{% if section.settings.video_file_link %}
  <script src="{{ 'video-contained.js' | asset_url }}" defer></script>  
{% endif %}

{% schema %}
  {
    "name": "Video With Description",
    "settings": [
      {
      "type": "image_picker",
      "id": "vid_thumbnail",
      "label": "Block Thumbnail"
      },
      {
      "type": "url",
      "id": "video_file_link",
      "label": "Video File URL"
      },
      {
      "type": "text",
      "id": "block_title",
      "label": "Block Title",
      "default": "Block Title"
      },
      {
      "type": "textarea",
      "id": "block_description",
      "label": "Block Description",
      "default": "Discover the next generation of spinal training with the SEG-B. Our unique design offers an unparalleled approach to spine health, allowing you to focus on specific spinal segments with precision."
      }
    ]
  }
  {% endschema %}